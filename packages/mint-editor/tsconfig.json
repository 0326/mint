  "compilerOptions": {
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "target": "ES2015"
